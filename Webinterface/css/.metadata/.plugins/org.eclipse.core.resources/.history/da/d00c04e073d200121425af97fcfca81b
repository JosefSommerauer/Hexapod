$(document).ready(function(){
  $("button").click(function(){
    var posting = $.post("set_message.php", {Message:$(this).attr('value')}) 
    .fail(function() { 
      alert("error"); 
    })
    .done(function( data ) {
      $( "#result" ).empty().append(data);
    });
  });
});
